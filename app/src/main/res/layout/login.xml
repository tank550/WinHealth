<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#A21E2D"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@mipmap/win" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="0dp"
            android:text="Connexion"
            android:textAlignment="center"
            android:textColor="#A21E2D"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mail"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Nom d'utilisateur ou Email :"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <EditText
                android:id="@+id/mot"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_below="@id/mail"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Mot de passe :"
                android:inputType="textPassword"
                android:singleLine="true" />

            <Button
                android:id="@+id/bout"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@id/mot"
                android:layout_alignLeft="@id/mot"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/radius"
                android:backgroundTint="#A21E2D"
                android:gravity="center"
                android:text="Se connecter"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/ins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bout"
                android:layout_alignRight="@id/mot"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:minHeight="48dp"
                android:text="@string/inscrire"
                android:textColor="#A21E2D"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/eye"
                android:layout_width="40dp"
                android:layout_height="23dp"
                android:layout_alignRight="@id/mot"
                android:layout_alignBottom="@id/mot"
                android:layout_marginRight="-4dp"
                android:layout_marginBottom="12dp"
                android:src="@mipmap/blindpx" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
